@model IngeLab.Models.Usuarios

@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true">
    <title>@ViewData["Title"] - IngeLab</title>
</head>
<body class="body_principal_login">

    <a href="/" class="btn-volver" aria-label="Volver a la p�gina principal">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
    </a>
    <a href="/" class="header-logo">IngeLab</a>
    <div class="background"></div>
    <div class="centro-pagina">

        @if (ViewBag.Error != null)
        {
            <div id = "mensajeError" class="alert alert-danger">
            <span> @ViewBag.Error</span>
            <button onclick="this.parentElement.style.display='none'" class="cerrar">×</button>
            </div>
        }
        <script>
        window.onload = function () {
            setTimeout(function () {
                var mensaje = document.getElementById("mensajeError");
                if (mensaje) {
                    mensaje.classList.add("fade-out");
                    setTimeout(() => mensaje.style.display = "none", 500);
                }
            }, 10000);
        };
      </script>

        

        <form method="post" asp-controller="Login" asp-action="ValidarUsuario" class="cuadro-unificado-login">
            <div class="titulo-cuadro">Iniciar Sesion</div>

        
            <label for="correo" class="label-estilizado">Correo Electronico</label>
            <input type="email" id="correo" name="Correo" class="input-estilizado" placeholder="tu@correo.com" required />
            <span asp-validation-for="Correo" class="text-danger"></span>

            <label for="contrasenia" class="label-estilizado">Contraseña</label>
            <input type="password" id="contrasenia" name="Contraseña" class="input-estilizado" placeholder="Tu contraseña" required />
            <span asp-validation-for="Contraseña" class="text-danger"></span>

            <div class="cuadro-contenedorConfirmar">
                <button type="submit" class="btn-Login">Ingresar</button>
            </div>

            <hr class="separador">

            <div class="link-registro">
                <p>¿No tienes una cuenta? <a asp-controller="Registro" asp-action="Index">Creala aqui</a></p>
            </div>
        </form>
    </div>
</body>
</html>